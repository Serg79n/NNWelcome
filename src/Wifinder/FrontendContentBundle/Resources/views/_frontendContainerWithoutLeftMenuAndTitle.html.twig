{% extends '::base.html.twig' %}

{% block body %}
    <div class="row-fluid">    
       <div class="span9">
            <div class="row-fluid">
                {% block breadCrumb %}
                    {% render "FrontendContentBundle:Menu:breadCrumb" with {"alias" : content.alias } %}
                {% endblock %}
            </div>
            <div class="row-fluid">
                {% block content %}{% endblock %}
            </div>
        </div>
        <div id="siderbar_right">
            {% block right_sidebar %}{% endblock %}
            {% include "FrontendContentBundle:News:_lastNewsOnSidebar.html.twig" with {"category" : "main", "limit" : 3} %}
            {% include "FrontendContentBundle:Review:_lastReviewOnSidebar.html.twig" with { "limit" : 3} %}
        </div>
    </div>
{% endblock %}
