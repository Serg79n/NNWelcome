{% extends 'FrontendContentBundle::_frontendContainer.html.twig' %}
{% block title %}{% trans from 'content'%}Projects{% endtrans %}{% endblock %}

{% block titlePage %}{% trans from 'content'%}Projects{% endtrans %}{% endblock %}

{% block meta_title %}
    {% trans from 'content'%}Projects{% endtrans %}
{% endblock %}
{% block meta_description %}
    {% trans from 'content'%}Projects{% endtrans %}
{% endblock %}
{% block meta_keywords %}
    {% trans from 'content'%}Projects{% endtrans %}
{% endblock %}

{% block breadCrumb %}
    <ul class="breadcrumb">
        <li><a href="/">{% trans from 'content'%}Home page{% endtrans %}</a> <span class="divider">/</span></li>
        <li class="active">{% trans from 'content'%}Projects{% endtrans %}</li>
    </ul>
{% endblock %}  
 
{% block sidebar %}
    {% render "FrontendContentBundle:Menu:sidebarYearsMenu" %}
{% endblock %}
    
{% block content %}
    <div id="news">
        {% if pagination|length > 0 %}
            <div class="couunt_results">{% trans from 'content' %}In all:{% endtrans %} <span>{{param.totalCount}}</span></div>
        <ul class="last_news">
            {% for item in pagination %}
                <li>
                    <h3 class="title_news">{{item.title}}</h3>
                    <div class="anons">
                        {% for img in item.images %}
                            {% if loop.index == 1%}
                            <img src="{{img.webPath | apply_filter('120x120_thumb')}}" alt="{{img.title}}"/>
                            {% endif %}
                        {% endfor %}
                        {{ item.shortDescription|raw }}
                         <div class="clear"></div>
                    </div>
                    <div class="text_right"><a href="/projects/{{item.alias}}">{% trans from 'content'%}more...{% endtrans %}</a></div>
                </li>
            {% endfor %}
        </ul>
        
        <div class="pagination">
            {{ knp_pagination_render(pagination) }}
        </div>
        {% endif %}
        <div class="clear"></div>
    </div>
{% endblock %}