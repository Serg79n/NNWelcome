{% extends '::_adminContainer.html.twig' %}

{% block title %}{% trans with {'%title%' : entity.title } from "admin" %}Area edit - "%title%"{% endtrans %}{% endblock %}

{% block titlePage %}{% trans with {'%title%' : entity.title  } from "admin" %}Area edit - "%title%"{% endtrans %}{% endblock %}

   
{% block content %}
    <form action="{{ path('admin_area_update', { 'id': entity.id, 'city_id' : city_id }) }}" method="post" {{ form_enctype(edit_form) }}  class="main_form">
        {{form_row(edit_form.is_active)}}   
        {{form_widget(edit_form.translations) }}
        {{form_errors(edit_form.translations) }}      
        {{ form_widget(edit_form._token) }} 
        {{ form_widget(edit_form.action) }}
    </form>

    <form action="{{ path('admin_area_delete', { 'id': entity.id, 'city_id' : city_id }) }}" method="post"  class="delete_form" id="delete_form_{{entity.id}}">
        {{ form_widget(delete_form) }}
    </form>

    {% include "LocationBundle:Area:_modalDeleteProject.html.twig" with {'id' : entity.id, 'title' : entity.title}%}
{% endblock %}

{% block sidebar %}
    {% include "LocationBundle:Area:_editFormActions.html.twig" with {'entity' : entity }%}
{% endblock %}