<div class="btn-group">
    <a class="btn btn-small" href="{{ path('admin_area', { 'city_id': entity.id }) }}">
        <i class="icon-list"></i> {% trans from 'admin'%}show areas{% endtrans %}</a>
    <a class="btn btn-small" href="{{path('admin_area_new', { 'city_id': entity.id }) }}">
        <i class="icon-plus-sign"></i> {% trans from 'admin'%}add area{% endtrans %}</a>
    <a class="btn btn-small" href="{{ path('admin_city_edit', { 'id': entity.id }) }}">
        <i class="icon-edit"></i> {% trans from "admin_location" %}edit{% endtrans %}</a>
    <form action="{{ path('admin_city_delete', { 'id': entity.id }) }}" method="post"  class="delete_form" id="delete_form_{{entity.id}}">
         <input type="hidden" id="form_id" name="form[id]" value="{{entity.id}}">
         <input type="hidden" id="form__token" name="form[_token]" value="{{delete_form._token.vars.value}}">                      
    </form>
    <a href="#deleteProjectModal_{{entity.id}}" role="button" class="btn btn-small btn-danger" data-toggle="modal">
        <i class="icon-trash icon-white"></i> {% trans from "admin_location" %}delete{% endtrans %}
    </a>
</div>
